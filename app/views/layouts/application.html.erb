<!DOCTYPE html>
<html>
  <head>
    <title>OauthClient</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= button_to "Users", "http://localhost:3001/users", method: :get %>
      <%= button_to "API Test", "http://localhost:3001/api/test", method: :get %>
      <%= button_to "Sign Out", "http://localhost:3000/users/sign_out", method: :get %>
    </nav>
    <%= yield %>
  </body>
</html>
